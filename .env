# NebulAI Mining Script Environment Variables
# Copy this file to .env and fill in your values

# Your Solana wallet private key (base58 encoded)
# Example: 5K..........Bj
SOLANA_PRIVATE_KEY=your_solana_private_key_here

# Optional: Custom encryption key for token storage (auto-generated if not provided)
# TOKEN_ENCRYPTION_KEY=your_custom_fernet_key_here

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Maximum workers per token (default: 1)
# MAX_WORKERS_PER_TOKEN=1

# Optional: Token refresh interval in hours (default: 23)
# TOKEN_REFRESH_HOURS=23

# Optional: API timeout in seconds (default: 10)
# API_TIMEOUT=10

# Optional: Maximum consecutive failures before cooldown (default: 5)
# MAX_CONSECUTIVE_FAILURES=5

# Optional: Cooldown period in seconds after max failures (default: 300)
# FAILURE_COOLDOWN_SECONDS=300